# General

set incremental-search "true"


# Titlebar

set window-title-basename "true"


# Style

set font "Iosevka 12"

set recolor "true"
set recolor-lightcolor "#282828"
set recolor-darkcolor "#ebdbb2"
set default-fg "#ebdbb2"
set default-bg "#282828"
set completion-bg "#383838"
set completion-fg "#ebdbb2"
set completion-group-bg "#928374"
set completion-group-fg "#282828"
set completion-highlight-bg "#98971a"
set completion-highlight-fg "#282828"
set inputbar-bg "#131313"
set inputbar-fg "#98971a"
set notification-bg "#ebdbb2"
set notification-fg "#282828"
set notification-error-bg "#cc241d"
set notification-error-fg "#ebdbb2"
set notification-warning-bg "#d79921"
set notification-warning-fg "#ebdbb2"
set index-fg "#ebdbb2"
set index-bg "#282828"
set index-active-fg "#282828"
set index-active-bg "#98971a"
set statusbar-bg "#080808"
set statusbar-fg "#ebdbb2"
set highlight-color "#458588"
set highlight-active-color "#b8bb26"
set highlight-transparency 0.3
set render-loading-bg "#ebdbb2"
set render-loading-fg "#282828"


# Mappings

map n scroll left
map e scroll down
map i scroll up
map o scroll right
map d scroll half-down
map u scroll half-up

map k search forward
map K search backward

map [index] e navigate_index down
map [index] i navigate_index up
map [index] n navigate_index collapse
map [index] N navigate_index collapse-all
map [index] o navigate_index expand
map [index] O navigate_index expand-all

map "'" focus_inputbar :
